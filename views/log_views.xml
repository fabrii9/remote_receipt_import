<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Tree de Logs -->
    <record id="view_remote_payment_import_log_tree" model="ir.ui.view">
      <field name="name">remote.payment.import.log.tree</field>
      <field name="model">remote.payment.import.log</field>
      <field name="arch" type="xml">
        <tree string="Logs de importación">
          <field name="name"/>
          <field name="file_name"/>
          <field name="total_rows"/>
          <field name="approved_count"/>
          <field name="skipped_count"/>
          <field name="create_date"/>
        </tree>
      </field>
    </record>

    <!-- Form de Log -->
    <record id="view_remote_payment_import_log_form" model="ir.ui.view">
      <field name="name">remote.payment.import.log.form</field>
      <field name="model">remote.payment.import.log</field>
      <field name="arch" type="xml">
        <form string="Log de Importación">
          <header>
            <!-- ahora descarga Excel -->
            <button name="action_download_xlsx" type="object" string="Descargar Excel" class="btn-primary"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="name" readonly="1"/>
                <field name="file_name" readonly="1"/>
              </group>
              <group>
                <field name="total_rows" readonly="1"/>
                <field name="approved_count" readonly="1"/>
                <field name="skipped_count" readonly="1"/>
              </group>
            </group>

            <group>
              <!-- Binario oculto para servir por /web/content -->
              <field name="export_filename" readonly="1"/>
              <field name="export_file" filename="export_filename" readonly="1" invisible="1"/>
            </group>

            <notebook>
              <page string="Líneas">
                <field name="lines_ids" nolabel="1">
                  <tree string="Detalle de líneas">
                    <field name="fecha_pago" string="Fecha de Pago"/>
                    <!-- CUIT/DNI proviene de 'Tipo de Operación' del archivo -->
                    <field name="tipo_operacion" string="CUIT/DNI (Tipo de Operación)"/>
                    <!-- Memo proviene de 'Operación Relacionada' del archivo -->
                    <field name="operacion_relacionada" string="Memo (Operación Relacionada)"/>
                    <field name="importe" string="Importe"/>
                    <field name="status" string="Estado"/>
                    <field name="partner_id" string="Partner ID (Odoo 18)"/>
                    <field name="partner_name" string="Partner Nombre"/>
                    <field name="deuda_detectada" string="Deuda detectada"/>
                    <field name="payment_id" string="ID Payment (Odoo 18)"/>
                    <field name="message" string="Mensaje"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción -->
    <record id="action_remote_payment_import_log" model="ir.actions.act_window">
      <field name="name">Logs de Importación</field>
      <field name="res_model">remote.payment.import.log</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_remote_payment_import_log_tree"/>
    </record>

    <!-- Menú -->
    <menuitem id="menu_remote_import_logs"
              name="Logs de importación"
              parent="menu_remote_import_main"
              action="action_remote_payment_import_log"
              sequence="20"
              groups="base.group_user"/>

  </data>
</odoo>
