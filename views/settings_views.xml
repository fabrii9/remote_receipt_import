<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Vista de configuración -->
  <record id="view_remote_receipt_settings_wizard" model="ir.ui.view">
    <field name="name">remote.receipt.settings.wizard.form</field>
    <field name="model">remote.receipt.settings.wizard</field>
    <field name="arch" type="xml">
      <form string="Configurar conexión (Odoo 18)">
        <group>
          <field name="remote_o18_url" placeholder="https://mi-odoo18.com"/>
          <field name="remote_o18_db" placeholder="nombre_bd"/>
          <field name="remote_o18_user" placeholder="usuario@dominio.com"/>
          <field name="remote_o18_password" password="True" placeholder="••••••••"/>
          <field name="remote_payment_journal_id"/>
          <field name="remote_payment_method_line_id"/>
          <field name="amount_tolerance"/>
        </group>
        <footer>
          <button string="Guardar" type="object" name="action_save" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Acción de configuración -->
  <record id="action_remote_receipt_settings_wizard" model="ir.actions.act_window">
    <field name="name">Configurar conexión</field>
    <field name="res_model">remote.receipt.settings.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- MENÚ RAÍZ -->
  <menuitem id="menu_remote_import_main"
            name="Remote Receipt Import"
            sequence="10"
            groups="base.group_user"/>

  <!-- Menú de Configuración -->
  <menuitem id="menu_remote_import_settings"
            name="Configuración"
            parent="menu_remote_import_main"
            action="action_remote_receipt_settings_wizard"
            sequence="5"
            groups="base.group_user"/>
</odoo>
